@model CaChepFinal2.Areas.Admin.Models.DatPhongCartVM
@* Trang create phiếu đặt phòng, có giao diện giống chi tiết phiếu đặt phòng (Details) *@
@{
    ViewData["Title"] = "CreateDatPhong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* DatPhongdeTails *@
<h1>Chọn Phòng Và Dịch Vụ cần đặt</h1>

<hr />



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



@* Bang Phong *@
<h2>Danh sách Phòng</h2>
<p>
    <a asp-action="IndexPhong" class="btn btn-primary">Them Phong</a>
</p>
@if (Model.LsPhongDatPhongs != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LsPhongDatPhongs[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LsPhongDatPhongs[0].Price)
                </th>
                <th>
                    Số Lượng
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LsPhongDatPhongs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        1
                    </td>
                    <td>
                        <a asp-action="RemovePhongFromCart" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@* Bang DichVu *@

<h2>Danh sách Dịch Vụ</h2>
<p><a  asp-action="IndexDichVu" class="btn btn-primary">Them Dich Vu</a></p>

@if (Model.LsDichVuDatPhongs != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LsDichVuDatPhongs[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LsDichVuDatPhongs[0].Price)
                </th>
                <th>
                    Số Lượng
                </th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LsDichVuDatPhongs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        1
                    </td>
                    <td>
                        <a asp-action="RemoveDVFromCart" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="row">
    <div class="col-8">
    </div>
    <div class="col-4">
        <div class="btn-group" role="group" aria-label="Basic example">
            <a asp-action="CreateDatPhongXacNhan" class="btn btn-danger btn-secondary">XÁC NHẬN</a>
            <a asp-action="Index" class="btn btn-secondary">TRỞ VỀ</a>
        </div>
        </div>
    
</div>
