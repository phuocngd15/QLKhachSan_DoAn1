@model IEnumerable<HappyHoTel.Models.LoaiPhong>  
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Loai Phong</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; Them Loai Phong</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m=>m.TenLoaiPhong)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>item.TenLoaiPhong)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.LoaiPhongId" />
                </td>
            </tr>

        }
    </table>
</div>
