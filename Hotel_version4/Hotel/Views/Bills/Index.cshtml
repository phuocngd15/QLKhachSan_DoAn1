@model IEnumerable<Hotel.Models.Bill>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NgayNhanThucTe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayTraThucTe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TienDatCoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongTienThanhToan)
