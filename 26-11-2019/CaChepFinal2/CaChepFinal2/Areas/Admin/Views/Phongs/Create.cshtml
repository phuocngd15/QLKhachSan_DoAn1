@model CaChepFinal2.Data.DataModel.ViewModel.PhongViewModel
@using CaChepFinal2.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Product</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="phongs.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="phongs.Name" class="form-control" />
            </div>
            <span asp-validation-for="phongs.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="phongs.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="phongs.Price" class="form-control" />
            </div>
            <span asp-validation-for="phongs.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="phongs.ShortDescription"></label>
            </div>
            <div class="col-5">
                <input asp-for="phongs.ShortDescription" class="form-control" />
            </div>
            <span asp-validation-for="phongs.ShortDescription" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="phongs.TrangThai"></label>
            </div>
            <div class="col-5">
                <input asp-for="phongs.TrangThai" class="form-control" />
            </div>
            <span asp-validation-for="phongs.TrangThai" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="phongs.ImageUrl"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="loaiphongs"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.phongs.LoaiPhongId" asp-items="Model.loaiphongs.ToSelectListItem(Model.phongs.LoaiPhongId)" class="form-control"></select>
            </div>
        </div>


        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


