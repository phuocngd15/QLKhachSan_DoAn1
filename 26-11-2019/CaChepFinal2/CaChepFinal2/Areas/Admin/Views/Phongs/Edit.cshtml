@model CaChepFinal2.Data.DataModel.ViewModel.DichVuViewModel
@using CaChepFinal2.Extensions
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Product</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="dichvus.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="dichvus.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="dichvus.Name" class="form-control" />
                </div>
                <span asp-validation-for="dichvus.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="dichvus.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="dichvus.Price" class="form-control" />
                </div>
                <span asp-validation-for="dichvus.Price" class="text-danger"></span>
            </div>
          
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="dichvus.ImageUrl"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="loaidichvus"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.dichvus.LoaiDVId" asp-items="Model.loaidichvus.ToSelectListItem(Model.dichvus.LoaiDVId)" class="form-control"></select>
                </div>
            </div>

        </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="dichvus.ShortDescription"></label>
                </div>
                <div class="col-8">
                    <input asp-for="dichvus.ShortDescription" class="form-control" />
                </div>
                <span asp-validation-for="dichvus.ShortDescription" class="text-danger"></span>
            </div>
          
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.dichvus.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }