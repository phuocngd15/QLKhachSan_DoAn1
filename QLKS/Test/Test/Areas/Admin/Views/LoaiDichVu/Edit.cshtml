@model Test.Models.LoaiDichVu
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Chỉnh sửa loại dịch vụ</h2>

<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="LoaiDichVuId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" form-group row">
            <div class="col-3">
                <label asp-for="TenLoaiDichVu"></label>
            </div>
            <div class="col-5">
                <input asp-for="TenLoaiDichVu" class="form-control" />
            </div>
            <span asp-validation-for="TenLoaiDichVu" class="text-danger"></span>
        </div>
     
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.LoaiDichVuId" value="Chỉnh sửa" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}