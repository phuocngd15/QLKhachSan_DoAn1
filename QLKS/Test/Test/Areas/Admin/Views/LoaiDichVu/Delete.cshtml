@model Test.Models.LoaiDichVu
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Xóa loại dịch vụ</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="LoaiDichVuId" />
        <div class=" form-group row">
            <div class="col-3">
                <label asp-for="TenLoaiDichVu">Tên Loại Phòng</label>
            </div>
            <div class="col-5">
                <input asp-for="TenLoaiDichVu" disabled class="form-control" />
            </div>
            <span asp-validation-for="TenLoaiDichVu" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.LoaiDichVuId" value="Xóa" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>
