@model Test.Models.LoaiDichVu
@{
    ViewData["Title"] = "Tạo loại dịch vụ mới";
}
<br />
<h2 class="text-info">Tạo Loại Dịch Vụ</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" form-group row">
            <div class="col-3">
                <label asp-for="TenLoaiDichVu">Tên Loại dịch vụ</label>
            </div>
            <div class="col-5">
                <input asp-for="TenLoaiDichVu" class="form-control" />
            </div>
            <span asp-validation-for="TenLoaiDichVu" class="text-danger"></span>
        </div>
       
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Tạo mới" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}