@model Test.Models.LoaiPhong
@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-info">Chi tiết loại phòng</h2>
    <div class="p-4 border rounded">
        <div class=" form-group row">
            <div class="col-3">
                <label asp-for="TenLoaiPhong">Tên loại phòng</label>
            </div>
            <div class="col-5">
                <input asp-for="TenLoaiPhong" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MoTaLoaiPhong"></label>
            </div>
            <div class="col-5">
                <input asp-for="MoTaLoaiPhong" disabled class="form-control"/>
            </div>
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.LoaiPhongId" >Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}