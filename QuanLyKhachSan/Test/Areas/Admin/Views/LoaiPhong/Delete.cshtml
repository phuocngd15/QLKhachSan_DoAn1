@model Test.Models.LoaiPhong
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Xóa loại phòng</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="LoaiPhongId" />
        <div class=" form-group row">
            <div class="col-3">
                <label asp-for="TenLoaiPhong">Tên loại phòng</label>
            </div>
            <div class="col-5">
                <input asp-for="TenLoaiPhong" disabled class="form-control" />
            </div>
            <span asp-validation-for="TenLoaiPhong" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MoTaLoaiPhong"></label>
            </div>
            <div class="col-5">
                <input asp-for="MoTaLoaiPhong" disabled class="form-control" />
            </div>
            <span asp-validation-for="MoTaLoaiPhong" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.LoaiPhongId" value="Xóa" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>
