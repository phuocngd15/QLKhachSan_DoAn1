@model Test.Models.ViewModel.PhongViewModel
@using Test.Extensions
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Tạo Phòng</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" form-group row">
            <div class="col-3">
                <label asp-for="Phong.TenPhong">Tên Phòng</label>
            </div>
            <div class="col-5">
                <input asp-for="Phong.TenPhong" class="form-control" />
            </div>
            <span asp-validation-for="Phong.TenPhong" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Phong.SoNguoiOToiDa"></label>
            </div>
            <div class="col-5">
                <input asp-for="Phong.SoNguoiOToiDa" class="form-control" />
            </div>
            <span asp-validation-for="Phong.SoNguoiOToiDa" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Phong.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Phong.MoTaPhong"></label>
            </div>
            <div class="col-5">
                <input asp-for="Phong.MoTaPhong" class="form-control" />
            </div>
            <span asp-validation-for="Phong.MoTaPhong" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Phong.CachTinhTien"></label>
            </div>
            <div class="col-5">
                <input asp-for="Phong.CachTinhTien" class="form-control" />
            </div>
            <span asp-validation-for="Phong.CachTinhTien" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Phong.PhuThu"></label>
            </div>
            <div class="col-5">
                <input asp-for="Phong.PhuThu" class="form-control" />
            </div>
            <span asp-validation-for="Phong.PhuThu" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Phong.TinhTrangPhong"></label>
            </div>
            <div class="col-5">
                <input asp-for="Phong.TinhTrangPhong" class="form-control" />
            </div>
            <span asp-validation-for="Phong.TinhTrangPhong" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LoaiPhongs"></label>
            </div>
            <div class="col-5">
                <select asp-for="Phong.LoaiPhongId" asp-items="ViewBag.LoaiPhongId" class=" form-control"></select>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Quay Lại Danh Sách</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}