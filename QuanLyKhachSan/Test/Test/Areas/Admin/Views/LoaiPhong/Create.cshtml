@model Test.Models.LoaiPhong
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Tạo Loại Phòng</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" form-group row">
            <div class="col-3">
                <label asp-for="TenLoaiPhong">Tên Loại Phòng</label>
            </div>
            <div class="col-5">
                <input asp-for="TenLoaiPhong" class="form-control" />
            </div>
            <span asp-validation-for="TenLoaiPhong" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MoTaLoaiPhong"></label>
            </div>
            <div class="col-5">
                <input asp-for="MoTaLoaiPhong" class="form-control" />
            </div>
            <span asp-validation-for="MoTaLoaiPhong" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Quay Lại Danh Sách</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 }